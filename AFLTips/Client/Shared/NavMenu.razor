<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">AFL Tips</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="ladder">
                <span class="oi oi-justify-left" aria-hidden="true"></span> Ladder
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="tips">
                <span class="oi oi-text" aria-hidden="true"></span> Tips
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="fixture">
                <span class="oi oi-calendar" aria-hidden="true"></span> Fixture
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="players">
                <span class="oi oi-people" aria-hidden="true"></span> Players
            </NavLink>
        </li>
    </ul>
</div>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
